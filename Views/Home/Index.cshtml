@model IEnumerable<Contract>
@{
    Layout = "_Layout";
    ViewData["Title"] = "لوحة التحكم";
}

<div class="container-fluid">
    <div class="row g-3">
        <!-- Cards إحصائيات -->
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">عدد العملاء</h5>
                    <h2>@ViewBag.CustomersCount</h2>
                    <i class="bi bi-people-fill fs-1"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">العقود النشطة</h5>
                    <h2>@ViewBag.ContractsActiveCount</h2>
                    <i class="bi bi-file-earmark-text-fill fs-1"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">الضمانات المنتهية</h5>
                    <h2>@ViewBag.GuaranteesFinished</h2>
                    <i class="bi bi-shield-exclamation fs-1"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">العقود المنتهية قريباً</h5>
                    <h2>@ViewBag.ContractsFinishedCount</h2>
                    <i class="bi bi-clock-history fs-1"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- الرسم البياني -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    توزيع العقود حسب النوع
                </div>
                <div class="card-body">
                    <canvas id="contractsChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- جدول أحدث العقود -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    أحدث العقود
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>رقم العقد</th>
                                <th>اسم العميل</th>
                                <th>نوع العقد</th>
                                <th>تاريخ الانتهاء</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Contract contract in Model)
                            {
                                <tr>
                                    <td>@contract.ContractNumber</td>
                                    <td>@contract.Customer.Name</td>
                                    <td>@contract.ContractKind</td>
                                    <td>@contract.EndContract.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('contractsChart').getContext('2d');

        // هنا نحول من C# List إلى JSON
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Labels));
        const data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Data));

        const contractsChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: 'توزيع العقود',
                    data: data,
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 99, 132, 0.7)' // ألوان إضافية لو عندك أنواع أكثر
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            }
        });
    </script>
}